<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/id_audio_record_play_r"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="录制音频"
        android:onClick="onRecord"/>

    <Button
        android:id="@+id/id_audio_record_play_p"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="暂停录制"
        app:layout_constraintTop_toBottomOf="@id/id_audio_record_play_r"
        android:onClick="onPause"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/id_audio_record_play_p"
        android:text="播放音频"
        android:onClick="onPlay"/>


</android.support.constraint.ConstraintLayout>